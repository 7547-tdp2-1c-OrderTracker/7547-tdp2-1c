<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/cordinator_layout_order_view"
    tools:context="ar.fi.uba.trackerman.activities.OrderActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/order_items_list"
            android:layout_margin="10dp"
            android:layout_weight="99">
        </ListView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_client"
            android:text="Cliente: #"
            android:textStyle="normal|bold"
            android:textSize="20dp"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="60dp">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/activity_order_add_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:layout_anchor="@id/toolbar"
                app:layout_anchorGravity="bottom|end"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp"
                android:onClick="addItem" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/activity_order_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_circle_outline"
                app:layout_anchor="@id/toolbar"
                app:layout_anchorGravity="bottom|end"
                android:layout_gravity="right"
                android:onClick="confirmOrder"
                android:layout_above="@+id/order_total"
                android:layout_alignLeft="@+id/activity_order_add_product"
                android:layout_alignStart="@+id/activity_order_add_product" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:id="@+id/order_total"
                android:text="Total: "
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:textColor="#ff0000"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
